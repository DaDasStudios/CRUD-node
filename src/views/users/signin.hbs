<div class="container" style="width: 420px;">
    <div class="card mt-4 ">
        <div class="card-header text-center"><h1>Account Login</h1></div>
        <img class="logo rounded-circle mx-auto d-block m-4" src="/img/logo.png" alt="Logo">
        <div class="card-body">
            <form method="post" action="/users/signin">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input name="email" value="{{email}}" placeholder="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" autofocus>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input name="password" value="{{password}}" placeholder="Password" type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="d-grid g-4">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>
        </div>
    </div>
</div>