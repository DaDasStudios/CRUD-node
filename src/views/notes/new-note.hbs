
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="post">
                <div class="form-group mb-2">
                    <input name="title" class="form-control" placeholder="Title" type="text" autofocus>
                </div>
                <div class="form-group mb-2">
                    <textarea name="description" id="" placeholder="Description" class="form-control"
                        rows="10"></textarea>
                </div>
                <div class="form-group mb-2">
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block" type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>