<div class="container">
    <h1 class="text-center title-white mb-5">Welcome back {{user.name}}</h1>
    <div class="row row-cols-4">
        {{#each notes}}
            <div class="col pb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            {{title}} <a href="/notes/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
                            </h5>
                        <hr>
                        <div class="d-grid gap-2">
                            <p class="card-text">{{description}}</p>
                            <form action="notes/delete/{{_id}}/?_method=DELETE" method="post">
                                <input type="hidden" value="DELETE" name="_method">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <p class="lead">There are not notes yet</p>
                        <a href="/notes/add" class="btn btn-success">Create One!</a>
                    </div>

                </div>
            </div>
        {{/each}}
    </div>
</div>
