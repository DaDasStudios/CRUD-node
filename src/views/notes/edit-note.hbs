<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-2">
                    <input value="{{note.title}}" name="title" class="form-control" placeholder="Title" type="text">
                </div>
                <div class="form-group mb-2">
                    <textarea name="description" id="" placeholder="Description" class="form-control"
                        rows="10">{{note.description}}</textarea>
                </div>
                <div class="form-group mb-2">
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>